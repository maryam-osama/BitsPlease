<h1> Requests </h1>
 
<table>
  <tr>
    <th>Request ID</th>
    <th>User Email</th>
  </tr>
 
  <% @requests.each do |request| %>
    <tr>
      <td><%= request.id %></td>
      <td><%= request.user_email %></td>
       <td><%= link_to 'Show' , request_path(request) %></td>
      
              <td><%= link_to 'Accept', request_path(request),
              method: :delete %></td>
      <td><%= link_to 'Reject', request_path(request),
              method: :delete %></td>
       
       
  
    </tr>
  
   <% end %>
</table>